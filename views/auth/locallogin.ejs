<body>
    <div class="container lead" id="privacy">
        <p>&nbsp;</p>

        <%- __('GLOBAL_RELEASE') %>
        <br>
            <a class="pull-right flip" href="/privacy">
                <%- __('Find Out More') %>
            </a>
            <br>
            <br>
            <div class="checkbox">
                <label for="consent">
                    <input type="checkbox" id="consent" name="consent" value="consent" />
                    <strong><%- __('I understand and want to continue') %></strong>
                </label>
            </div>
            <div class="row">
                <div class="col-xs-12 text-right">
                    
                    <button class="btn btn-primary pull-right flip" onclick="if ($('#consent').prop('checked')) {$('#entrybox').show();$('#privacy').hide();}">
                        <%= __('CONTINUE') %> <i class="fa fa-chevron-end"></i>
                    </button>
                </div>
            </div>
    </div>

    <div class="container" id="entrybox" style="display:none">
        <div class="text-center">
            <h3>
                <%= __('My Name') %>
            </h3>
            <br>
            <form action="/auth/locallogin" method="post" onsubmit="$('#entrybox').hide();$('#directing').show();">
                <div class="form-group">
                    <input class="form-control input-lg" pattern=".{3,}" placeholder="<%= __('Your Name') %>" required id="first_name" title="<%= __('Please enter a longer name') %>"
                        type="text" class="validate" name="firstName" />
                        <br>
                    <div class="pull-left flip">
                        <button class="btn" onclick="$('#entrybox').hide();$('#privacy').show();">
                            <i class="fa fa-chevron-start"></i>
                            <%= __('BACK') %>
                        </button>
                    </div>
                    <div class="pull-right flip">
                        <button class="btn btn-primary" type="submit" name="action">
                            <%= __('CONTINUE') %>
                                <i class="fa fa-chevron-end"></i>
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <div id="directing" style="display: none;margin:2em;text-align: center;margin-top:20%;">
        <img src="/images/loading.gif" />
        <p><%- __('Returning to the Indaba application...') %></p>
    </div>
    
</body>



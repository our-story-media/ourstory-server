<style>
  .carousel .item {
    background: none;
  }

  .searchable {
    overflow: auto;
    overflow-x: hidden;
    height: 400px;
    padding-top:2em;
  }

  .infobox {
    margin-right: 10px;
    float: right;
    display: block;
    margin-top: 3px;
    text-align: right;
  }

  .gobtn {
    width: 100%;
    height: 84px;
    /* padding-top: 30px; */
  }

  .summary img
  {
    overflow: hidden;
    width: 150px;
    height: 150px;
    border-radius: 100px;
  }

  .shotimg
  {
    width:80px;
    filter: grayscale();
  }

  .circle
  {
    overflow: hidden;
    width: 80px;
    height: 80px;
    border-radius: 50%;
  }

  
  .circlex {
    overflow: hidden;
    width: 90px;
    height: 90px;
    border-radius: 50%;
  }

  @media (max-width:785px) {
    .searchable {
      overflow-y: hidden;
      overflow-x: hidden;
      height: auto;
    }

    .gobtn {
      width: 100%;
      height: 84px;

    }

    .sp {
      display: none;
    }

    .infobox {
      margin-right: 0;
      float: right;
      display: inline-block;
      margin-top: 0;
      text-align: right;
    }

    .carousel .item {
      height: inherit;
    }

    .circlex {
      width:60px;
      height:60px;
    }

    .circlewrapper
    {
      min-width: inherit !important;
    }
  }
</style>

